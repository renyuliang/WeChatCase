@import "/static/icon.wxss";

/* 
*  全局样式 
*/

page {
  /* 苹果通用字体 细体 *//* font-family: "PingFangSC-Thin",'Helvetica Neue'; */
  font-family: PingFangSC-Regular, PingFang SC;
  font-size: 32rpx;
  height: 100vh;
  /* 正式颜色 */
  background: #f5f5f5;
  /* 测试颜色 *//* background: lightblue; */
  color: #333;
  box-sizing: border-box;
}

view, text, scroll-view, swiper, button, form, input, textarea, label, navigator,
image {
  box-sizing: border-box;
}

.clearfix {
  zoom: 1;
  clear: both;
}

.clearfix:after {
  clear: both;
  content: "";
  display: block;
  height: 0;
  visibility: hidden;
}

.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  /* width: 0;
  height: 0;
  color: transparent; */
}

/*
*  公用颜色
*/

.color333 {
  color: #333 !important;
}

.color999 {
  color: #999 !important;
}

/*
*  flex布局
*/

.row-flex {
  display: flex;
  flex-direction: row;
}

.column-flex {
  display: flex;
  flex-direction: column;
}

.flex-r-c {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-c {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.flex-b {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.flex-a {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.flex-column-c {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.flex-all {
  flex: 1;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.align-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.align-self-start {
  align-self: flex-start !important;
}

.align-self-end {
  align-self: flex-end !important;
}

/* 固定的蒙层 */

.mask-tip {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

/* 数字换行 */

.break-number {
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.bordertop {
  height: 1rpx;
  background-color: #d1d1d1;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

/* 多行文本超出隐藏 */

.moreOverFlow {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
}
