/* pages/msg/msg.wxss */

page {
  /* background-color: #F5F5F5;  */
}

.MSG {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  background-image: linear-gradient(#1f95fd, #1f7afd);
  padding-left: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}

/* 列表 */

.list-container {
  padding: 32rpx 32rpx 82rpx;
}

/* 为空状态或未登录 */

.tip-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 64rpx;
  background: #fdebb0;
  padding: 0 32rpx;
}

.empty-box {
  padding-top: 240rpx;
}
.empty-box2 {
  padding-top: 100rpx;
}

.login-btn {
  width: 344rpx;
  height: 88rpx;
  background: rgba(29, 114, 239, 1);
  border-radius: 44rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #fff;
  text-align: center;
  line-height: 88rpx;
  margin-top: 48rpx;
}

.tip-msg {
  font-size: 24rpx;
  font-weight: 400;
  color: #fd7e1f;
  line-height: 24rpx;
}

.close-box {
  padding: 10rpx 8rpx;
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  vertical-align: middle;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.init-noData {
  padding-top: 32rpx;
}