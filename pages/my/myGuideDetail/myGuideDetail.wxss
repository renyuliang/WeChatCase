/* pages/my/myGuideDetail/myGuideDetail.wxss */

.detail {
  padding-top: 22rpx;
}

.detailInfo {
  background-color: #fff;
  margin-bottom: 64rpx;
  padding: 32rpx;
}

.detailTitle {
  -webkit-line-clamp: 2;
  font-size: 34rpx;
  color: #212121;
  font-weight: bold;
}

.detailCage {
  margin: 20rpx 0 36rpx;
}

.English {
  width: 40rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #fd7e1f;
  background: rgba(253, 126, 31, 0.1);
  border-radius: 4rpx;
  font-size: 24rpx;
  text-align: center;
  margin-right: 16rpx;
}

.still {
  width: 56rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #1d72ef;
  background: rgba(29, 114, 239, 0.1);
  border-radius: 4rpx;
  text-align: center;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.detailSame {
  color: #7f7f7f;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.row-flex {
  color: #666;
  font-size: 28rpx;
  font-weight: bold;
}

.detailContent {
  padding: 0 32rpx;
  height: 370rpx;
}

.conMain {
  color: #333;
  font-size: 34rpx;
  margin-bottom: 22rpx;
}

.conMain::before {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background: rgba(253, 126, 31, 1);
  border-radius: 50%;
  margin: 0 16rpx 0 0;
  position: relative;
  top: -4rpx;
}

.conNews {
  -webkit-line-clamp: 4;
  color: #7f7f7f;
  font-size: 30rpx;
}

.conAward {
  margin-top: 32rpx;
  color: #b2b2b2;
  font-size: 24rpx;
}

.iconsign_expired, .iconsign_success {
  font-size: 24rpx;
  display: inline-flex;
}

.readGuide {
  margin-bottom: 48rpx;
  width: 344rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: rgba(29, 114, 239, 0.1);
  border-radius: 22px;
  color: #1d72ef;
  font-size: 36rpx;
}

.iconsign_reward {
  display: inline-flex;
  font-size: 46rpx;
  margin-right: 8rpx;
  vertical-align: bottom;
}

.iconshare {
  display: inline-flex;
  margin-right: 8rpx;
  font-size: 36rpx;
  position: relative;
  top: 2rpx;
}

.share {
  display: inline-block;
  padding: 0 !important;
  border: none !important;
  font-size: 30rpx !important;
  color: #333;
  font-weight: normal;
}

.shareImg {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  top: -4rpx;
}

.flex-r-c {
  line-height: 60rpx;
  height: 60rpx;
}

.readWard {
  color: #333;
  font-size: 30rpx;
  padding-left: 32rpx;
  position: relative;
}

.readWard::before {
  display: inline-block;
  content: '';
  width: 2rpx;
  height: 24rpx;
  background: rgba(216, 216, 216, 1);
  margin-right: 32rpx;
  position: relative;
  top: 4rpx;
}

.readWardTips {
  width: 112rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(253, 126, 31, 1);
  box-shadow: 0px 1px 4px 0px rgba(255, 205, 177, 1);
  border-radius: 28rpx 28rpx 28rpx 0px;
  font-size: 20rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  top: -50%;
  right: -60%;
}
