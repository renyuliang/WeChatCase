/* pages/my/myGuideDetail/myGuideDetail.wxss */

.detail {
  padding-top: 24rpx;
  height: 100vh;
  box-sizing: border-box;
}

.detailInfo {
  background-color: #fff;
  padding: 32rpx;
}

.detailTitle {
  -webkit-line-clamp: 2;
  font-size: 34rpx;
  color: #212121;
  font-weight: bold;
}

.label {
  color: #333;
}

.detailCage {
  margin: 16rpx 0 32rpx;
}

.English {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fd7e1f;
  background: rgba(253, 126, 31, 0.1);
  border-radius:16rpx 0px 16rpx 0px;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  margin-right: 16rpx;
}

.still {
  padding: 0 16rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #F7402C;
  font-weight:400;
  background: rgba(247,64,44,0.08);
  border-radius: 4rpx;
  text-align: center;
  font-size: 24rpx;
  margin-right: 8rpx;
}
.still-read{
  color: #FD7E1F;
  background: rgba(253,126,31,0.1);
}
.still-guide{
  color: #1D72EF;
  background: rgba(29,114,239,0.08);
}

.detailSame {
  color: #7f7f7f;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  line-height:32rpx;
}

.importNotice {
  color: #666;
  font-size: 28rpx;
  font-weight: bold;
  margin: 32rpx 0;
}

.flex-all {
  white-space: pre-wrap;
  word-break: break-all;
}

.detailContent {
  padding: 0 32rpx;
}

.conMain {
  color: #333;
  font-size: 34rpx;
  padding: 64rpx 0 24rpx;
}

.conMain::before {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background: rgba(253, 126, 31, 1);
  border-radius: 50%;
  margin: 0 16rpx 0 0;
  position: relative;
  top: -4rpx;
}

.conNews {
  -webkit-line-clamp: 4;
  color: #7f7f7f;
  font-size: 30rpx;
}

.conAward {
  margin-bottom: 24rpx;
  color: #b2b2b2;
  font-size: 24rpx;
  text-align: center;
}

.iconsign_expired, .iconsign_success {
  font-size: 24rpx;
  display: inline-flex;
}

.readGuide {
  margin-bottom: 40rpx;
  width: 344rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: rgba(29, 114, 239, 0.1);
  border-radius: 22px;
  color: #1d72ef;
  font-size: 36rpx;
  margin-top: 120rpx;
}
.mt-240{
  margin-top: 240rpx;
}

.iconsign_reward {
  display: inline-flex;
  font-size: 46rpx;
  margin-right: 8rpx;
  vertical-align: bottom;
}

.iconshare {
  display: inline-flex;
  margin-right: 8rpx;
  font-size: 36rpx;
  position: relative;
  top: 2rpx;
}

.share {
  display: inline-block;
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  font-size: 30rpx !important;
  color: #333;
  font-weight: normal;
}

.shareImg {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}

.flex-r-c {
  line-height: 60rpx;
  height: 60rpx;
}

.readWard {
  color: #333;
  font-size: 30rpx;
  padding-left: 32rpx;
  position: relative;
}

.readWard::before {
  display: inline-block;
  content: '';
  width: 2rpx;
  height: 24rpx;
  background: rgba(216, 216, 216, 1);
  margin-right: 32rpx;
  position: relative;
  top: 4rpx;
}

.readWardTips {
  width: 112rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(253, 126, 31, 1);
  box-shadow: 0px 1px 4px 0px rgba(255, 205, 177, 1);
  border-radius: 28rpx 28rpx 28rpx 0px;
  font-size: 20rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  top: -50%;
  right: -60%;
}

.flex-column-c {
  padding-bottom: 100rpx;
}

/* 红包 */

.mask-tip {
  justify-content: center;
  padding-bottom: 0;
}

.alltop {
  position: relative;
  top: -40rpx;
}

.redBack {
  position: relative;
}

.backInfo {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  bottom: 0rpx;
}

.redTime {
  color: #fff;
  font-size: 28rpx;
}

.redImg {
  display: block;
  padding: 0 30rpx;
}

.closeRed {
  text-align: center;
  margin-top: 16rpx;
}

.initBtn {
  background-color: #fff !important;
  border: none !important;
  border-radius: 44rpx !important;
  font-weight: normal !important;
  font-size: 32rpx !important;
  width: 344rpx !important;
  margin: 40rpx auto 50rpx auto;
}
