/* init-list 自定义样式 */

.header {
  height: 320rpx;
  background-image: linear-gradient(#1f95fd, #1f7afd);
  align-items: flex-end;
  padding-bottom: 64rpx;
}

.headerImg {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 0 32rpx;
  border: 1rpx solid #353535;
}
.noborder{
  border: none;
}

.login-box{
  font-size: 36rpx;
  font-weight: 500;
  color:#FFFFFF;
  line-height: 128rpx;
}

.headerInfo {
  color: #fff;
  height: 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.nameNick {
  font-size: 36rpx;
  font-weight: bold;
  /* margin-bottom: 14rpx; */
}

.auth {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  font-size: 24rpx;
  padding: 7rpx 16rpx;
  position: relative;
  letter-spacing: 2rpx;
}

.isAuth {
  padding: 5rpx 16rpx;
}

.image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: top;
  margin-left: -10rpx;
}

/* 组件自定义样式 */

.init-list:first-child {
  margin: 24rpx 0;
}
