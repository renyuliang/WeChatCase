/* components/init-guide/index.wxss */

.info {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.04);
  border-radius: 16rpx;
  padding: 24rpx 24rpx 32rpx 24rpx;
  margin-bottom: 24rpx;
  position: relative;
}
.info:last-child{
  margin-bottom: 0
}

.English {
  width: 40rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #fd7e1f;
  background: rgba(253, 126, 31, 0.1);
  border-radius: 4rpx;
  font-size: 24rpx;
  text-align: center;
  margin-right: 16rpx;
}

.still {
  width: 56rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #1d72ef;
  background: rgba(29, 114, 239, 0.1);
  border-radius: 4rpx;
  text-align: center;
  font-size: 20rpx;
  margin-right: 8rpx;
}

.author {
  color: #7f7f7f;
  font-size: 24rpx;
}

.guideContent {
  margin: 16rpx 0 36rpx;
  color: #666;
  font-size: 34rpx;
  min-height: 88rpx;
  -webkit-line-clamp: 2;
}

.guideContentWidth {
  width: 80%;
}

.indexIcon {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.iconicon_label {
  display: inline-flex;
  font-size: 24rpx;
  margin: 6rpx 16rpx 0 0;
}

.category {
  color: #7f7f7f;
  font-size: 24rpx;
  position: relative;
}

.line {
  margin: 0 8rpx;
}

.sick {
  color: #7f7f7f;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.date {
  color: #b2b2b2;
  font-size: 24rpx;
}
