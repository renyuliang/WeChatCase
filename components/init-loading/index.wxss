/* components/loading/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:32rpx 0;
}

.loading-center {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #3063b2;
}

.size {
  font-size: 30rpx;
  color: #666;
  margin-left: 10rpx;
}

.loading-bottom {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.rotate-moveing {
  animation: rotatemove 2s linear 0s infinite normal;
  -webkit-animation: rotatemove 2s linear 0s infinite normal;
}

.scale-moveing {
  animation: loadmove 1s linear 0s infinite alternate;
  -webkit-animation: loadmove 1s linear 0s infinite alternate;
}

@-webkit-keyframes rotatemove {
  0% {
    -webkit-transform: rotate(0);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes rotatemove {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}

@-webkit-keyframes loadmove {
  0%, 100% {
    -webkit-transform: scale(0.5);
  }

  50% {
    -webkit-transform: rotate(1);
  }
}

@keyframes loadmove {
  0%, 100% {
    transform: scale(0.5);
  }

  50% {
    transform: scale(1);
  }
}
